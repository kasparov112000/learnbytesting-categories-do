{
    "name": "categories",
    "version": "1.5.0",
    "private": true,
    "templatetype": "microservice",
    "templateversion": "1.0.0",
    "description": "Auto-generated Armadillo Template.",
    "main": "./app/server.ts",
    "scripts": {
        "build": "tsc --module commonjs",
        "start": "node ./app/server.js",
        "start:build": "npm run build && node ./build/app/server.js",
        "start:dev": "npm-run-all --parallel lint:watch start:watch",
        "start:watch": "ts-node-dev --respawn --transpileOnly ./app/server.ts",
        "start:debug-docker": "docker-compose -f 'docker-compose.dev.yml' up -d --build",
        "start:docker-dev": "node --inspect=127.0.0.1:9080 ./build/app/server.js",
        "start:tsnode": "ts-node ./app/server.ts --debug=7000",
        "start:tsnode:lint": "npm run lint && ts-node ./src/index.ts",
        "test": "jest --coverage --coverageDirectory=output/coverage/jest",
        "test:watch": "npm t -- -w",
        "show-coverage-win": "start coverage/index.html",
        "show-coverage-mac": "open coverage/index.html",
        "test:babel": "nyc --require babel-register --reporter=html --reporter=text mocha --exit test/**/*.spec.js --compilers js:babel-core/register",
        "startFile": "node ./node_modules/babel-cli/bin/babel-node.js src/lib/http-request-model.js",
        "deploy": "node_modules/babel-cli/bin/babel.js src/ -d build/",
        "lint": "esw src --color",
        "lint:watch": "esw src --color --watch"
    },
    "jest": {
        "coverageReporters": [
            "text"
        ],
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "output": "output/coverage/junit/junit.xml",
        "usePathForSuiteName": "true"
    },
    "repository": {
        "type": "git",
        "url": "/category.git"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@mdr/framework": "^1.5.5",
        "@mdr/models": "^1.5.9",
        "@mdr/schemas": "^1.5.0",
        "@types/jest": "^23.3.2",
        "body-parser": "^1.18.3",
        "deep-equal": "^1.1.1",
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "express-mongo-sanitize": "^1.3.2",
        "helmet": "^3.21.3",
        "http": "0.0.0",
        "http-status": "^1.4.2",
        "lodash": "^4.17.10",
        "mongoose": "^5.9.4",
        "mongoose-query-parser": "^1.1.5",
        "morgan": "^1.9.0",
        "pwc-us-agc-logger": "^1.0.9",
        "swagger-ui-express": "^4.1.3",
        "ts-node": "^7.0.1",
        "typescript": "^3.8.3",
        "typescript-require": "^0.2.10",
        "winston": "^3.2.1",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.11",
        "@types/deep-equal": "^1.0.1",
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.17.3",
        "@types/lodash": "^4.14.149",
        "@types/mocha": "^5.2.5",
        "@types/mongoose": "^5.7.6",
        "@types/morgan": "^1.9.0",
        "@types/node": "^10.17.17",
        "@types/sinon": "^5.0.1",
        "@types/supertest": "^2.0.6",
        "chai": "^4.1.2",
        "chai-http": "^4.0.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^11.3.1",
        "eslint-config-standard": "^11.0.0-beta.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^5.2.1",
        "eslint-plugin-promise": "^3.6.0",
        "eslint-plugin-standard": "^3.0.1",
        "eslint-watch": "^3.1.2",
        "jest": "^25.1.0",
        "jest-junit": "^10.0.0",
        "mocha": "^5.2.0",
        "npm-run-all": "^4.0.2",
        "nyc": "^15.0.0",
        "sinon": "^6.1.5",
        "sinon-mongoose": "^2.2.1",
        "tslint": "^5.20.1"
    }
}
